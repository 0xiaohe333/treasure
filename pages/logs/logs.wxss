page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.v1 {
  display: flex;
  align-items: center; 
  height: 100rpx;
  width: 500px;
}
.intro{
  line-height: 100rpx;
  font-size: 24px;
  font-weight: bold;
  margin-right: 100px;
}
.button {
  width: 30rpx;
  background-color: #2977c5;
  /* width: 200px; */
  height: 30px;
  color: white;
  padding: 5px 10px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin-left: auto; 
  cursor: pointer;
  margin-right: 10px;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.log-item {
  margin-top: 20rpx;
  text-align: center;
}
.log-item:last-child {
  padding-bottom: env(safe-area-inset-bottom);
}
.page3{
  width: 40%;
  height: 100rpx;
  background-color: rgb(48, 201, 228);
  left: 10%;
}
.page2{
  width: 100%;
  height: 270px;
  border:2rpx solid #000000;
}
.page1{
  width: 90%;
  border:2rpx solid #000000;
  justify-content: center;
  flex-direction: column;
  display: flex;
  margin: auto;
}
.text1{
  font-size: 70rpx;
  color: rgb(42, 136, 153);
}
.page4{
  width: 50%;
}