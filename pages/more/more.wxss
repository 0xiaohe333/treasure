/* .wxss 文件 */
.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 根据需要调整 */
  justify-content: space-between;
} 

.buttons-container {
  display: flex;
  justify-content: flex-end; /* 将按钮放在右边 */
  align-items: center; /* 垂直居中按钮） */
  padding: 10rpx; /* 根据需要调整内边距 */
  background-color: #f5f5f5; /* 可选：为按钮区域添加背景色 */
}

.buttons-container button {
  margin-left: 10rpx; /* 按钮之间的间距 */
}



.form-group {
  margin-bottom: 20rpx;
}

.picker {
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 4rpx;
  background-color: #fff;
}

.input-field {
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 4rpx;
  background-color: #fff;
  width: 100%;
}

.btn-search {
  padding: 10rpx 20rpx;
  background-color: #009688;
  color: #fff;
  border-radius: 4rpx;
}




/* 表格容器 */
.table-container {
  display: flex;
  flex-direction: column;
  width: 100%; /* 根据需要调整 */
  border: 1px solid #ddd;
  padding: 10px;
  margin-bottom: 10px; /* 与分组按钮之间的间距 */
}

/* 表格头部 */
.table-header {
  display: flex;
  justify-content:center;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #ddd;
  background-color: #f2f2f2;
  font-weight: bold;
}
/* 表格行 */
.table-row {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}
/* 表格单元格 */
.table-cell {
  flex: 1; /* 均匀分布 */
  padding: 10px;
  border-bottom: 1px solid #ddd;
  text-align: center; 
   border-right: 1px solid #ddd; /* 除了最右边的单元格 */
}
.table-cell:last-child {
  border-right: none; /* 移除最右边单元格的右边框 */
}


/* 复选框容器 */
.checkbox-container {
  display: flex;
  align-items: center;
  margin-right: 10px; /* 与其他单元格保持间距 */
}

/* 没有结果的样式 */
.no-result {
  padding: 20px;
  text-align: center;
  color: #999;
}



/* 分组按钮样式（如果需要） */
button {
  width: 100%;
  padding: 10px 0;
  background-color: #009688;
  color: #fff;
  border: none;
  border-radius: 4px;
  margin-top: 5px; /* 与表格之间的间距 */
}

/* 标签样式，用于包裹复选框和文本 */
label {
  display: flex;
  align-items: center;
  margin-right: 10px; /* 与其他单元格保持间距 */
}


